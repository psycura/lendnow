-var bulletItems=['All Credit Scores Qualify','Quick Access to Funds','Minimal Documentation Required','All Industries Accepted']
-var checkItems=['FUNDING AMOUNT/ €3,000 – €5,000,000','TIME TO FUNDING/ 24 – 72 Hours','TERM LENGTH/ 3 – 24 Months','PAYMENT FREQUENCY/ Business Day or Weekly']



mixin sectionLeft(sectionTitle, imgSrc)

    section.payday-loans.section-left
        .container
            .left__block
                .section__title
                    h3=sectionTitle
                    .section__subtitle
                        | WORKING CAPITAL WHEN YOU NEED IT
                .section__info
                    .bullets__block
                        ul.bullets__list
                            each bullet in bulletItems
                                li.bullet__item=bullet
                    .checks__block
                        ul.checks__list
                            each item in checkItems
                                li.check__item=item
                .section__desc
                    |Obtaining a merchant cash advance, also known as a revenue-based loan, is a quick and easy way to obtain working capital, even if you have bad credit!
                .section__cta_block
                    .section__how_button
                        a(href="#").btn.btn-primary.btn-lg How UK Payday Loans Work
                        a(href="#").btn.btn-success.btn-lgn Apply Now
            .section__image_right
                img(src="#{imgSrc}" alt="").section__pic



