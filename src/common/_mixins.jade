

mixin socials
    -
        var socialItems={
        'http://www.facebook.com':'fa fa-facebook',
        'http://www.twitter.com':'fa fa-twitter',
        'http://www.google.com':'fa fa-google-plus',
        'http://www.pinterest.com':'fa fa-pinterest-p'

        }

    ul.socials__list
        each  iconSrc,url in socialItems
            li.socials__item.col-xs-2
                a(href="#{url}").socials__link
                    i(class='#{iconSrc}')





mixin navigation
    -
        var navItems={
        'Home':'index.html',
        'How It Works':'pages/how-it-works.html',
        'Payday Loans':'pages/payday-loan.html',
