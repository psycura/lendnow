        'Blog':'#',
        'Apply Online':'#',
        'About Us':'pages/about.html',
        'Contact Us':'pages/contacts.html'

        }
    section.navigation
        nav.main_nav.navbar.navbar-default

            .navbar-header
                button(type='button' class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar1")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a(href="#").navbar-brand

            .collapse.navbar-collapse(id='navbar1')
                ul.nav.navbar-nav
                    each pageUrl, pageName in navItems
                        li.nav.navbar-nav
                            a(href="#{pageUrl}").nav__link=pageName


